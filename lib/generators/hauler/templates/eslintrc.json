{
  "extends": [
    "airbnb"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "flow-type"
  ],
  "rules": {
    "flowtype/define-flow-type": 1,
    "flowtype/use-flow-type": 1,
    "max-len": [2, 140, 2]
  },
  "settings": {
    "import/ignore": [
      "node_modules",
      "\\.(jpg|png|scss)"
    ],
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.js"
      }
    }
  }
}
